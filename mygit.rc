function cgit() {
    if [[ ! -d $1 ]];then
        echo "first input must be dir path."
        return 1
    fi
    git -C $@
}

function xg() {
    if [[ ! -d $1 ]];then
        cgit $(pwd) ${*}
    else
        cgit $1 ${@:2}
    fi
}

function SetGitTrace() {
    if [[ -z $1 || $1 == '0' ]];then
        unset GIT_TRACE
        unset GIT_TRANSFER_TRACE
    else
        export GIT_TRACE=1
        export GIT_TRANSFER_TRACE=1
    fi
}

function SetGitVerbose() {
    if [[ -z $1 || $1 == '0' ]];then
        unset GIT_CURL_VERBOSE
    else
        export GIT_CURL_VERBOSE=1   
    fi
}


