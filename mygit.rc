function pull_curr() {
    remote="origin"
    if [[ -z $1 ]];then
        echo "push_curr use default remote: \"origin\""
    else
        remote=$1
    fi

    brname=$(xg branch --show-current $@)
    xg pull $remote $brname $@ && clear
    #git pull $remote $(git branch --show-current) && clear
}

