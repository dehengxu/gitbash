function ci_() {
    if [[ -z $1 ]];then
        echo "Comments should not be empty."
        return 1
    fi
    git commit -m "${1} : "$2 ${@:3}    
}

function ci_mt() {
    local supported="Add Update Fix Optim Pack Note Remove"
    local e=""
    for e in supported;do
        if [[ $e == $1 ]];then
            break
        else
            e=""
        fi
    done

    if [[ -z $e ]];then
        echo "Fist input must be: $supported"
        return 1
    fi

    if [[ -z $2 && $1 != "Pack" ]];then
        echo "Comments should not be empty."
        return 1
    fi

    if [[ $1 == "*Pack" ]];then
        git commit -m "【$1】*pack" 
    else
        git commit -m "【${1}】"$2 ${@:3}
    fi
}

