alias br="git branch"
alias brl="git branch --list"

# sync repostory

function branch_curr() {
	xg branch --show-current
}

function pull_curr() {
    remote="origin"
    if [[ -z $1 ]];then
        echo "push_curr use default remote: \"origin\""
    else
        remote=$1
    fi
    git pull $remote $(git branch --show-current) && clear
}

function push_curr {
    remote="origin"
    if [[ -z $1 ]];then
        echo "push_curr use default remote: \"origin\""
    else
        remote=$1
    fi
    git push -u $remote $(git branch --show-current) && clear
}

function fetch_all() {
    remote="origin"
    if [[ -z $1 ]];then
        echo "push_curr use default remote: \"origin\""
    else
        remote=$1
    fi
    git fetch $remote -a && clear
}

